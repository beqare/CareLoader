<Window x:Class="CareLoader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CareLoader" Height="500" Width="502" Background="#FF121212" Foreground="#FFF0F0F0"
        FontFamily="Segoe UI" FontSize="14" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/icon.png" >

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="UrlBox" Grid.Row="0" Height="36" 
         Padding="10,4" VerticalContentAlignment="Center"
         Foreground="#FFCCCCCC" Background="#FF1E1E1E"
         BorderBrush="#FF333333" BorderThickness="1" Margin="0,0,0,15"/>



        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center" >
            <Label Content="Format:" Width="70" VerticalAlignment="Center" Foreground="#FFBBBBBB"/>
            <ComboBox x:Name="FormatBox" Width="120" Background="#FF1E1E1E" Foreground="#111"
                      BorderBrush="#FF333333" BorderThickness="1" >
                <ComboBoxItem Content="mp4" IsSelected="True"/>
                <ComboBoxItem Content="mp3"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center" >
            <Label Content="Quality:" Width="70" VerticalAlignment="Center" Foreground="#FFBBBBBB"/>
            <ComboBox x:Name="QualityBox" Width="120" Background="#FF1E1E1E" Foreground="#111"
                      BorderBrush="#FF333333" BorderThickness="1" >
                <ComboBoxItem Content="best" IsSelected="True"/>
                <ComboBoxItem Content="worst"/>
                <ComboBoxItem Content="1080p"/>
                <ComboBoxItem Content="720p"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center">
            <Label Content="Save Path:" Width="70" VerticalAlignment="Center" Foreground="#FFBBBBBB"/>
            <TextBox x:Name="PathBox" Width="299" Height="36" IsReadOnly="True" Padding="10,4"
                     Background="#FF1E1E1E" Foreground="#FFCCCCCC" BorderBrush="#FF333333" BorderThickness="1"
                     VerticalContentAlignment="Center"/>

            <Button Content="…" Width="40" Height="36" Margin="8,0,0,0" 
                    Background="#FF333333" Foreground="#FFF0F0F0" BorderThickness="0" 
                    Cursor="Hand" Click="BrowseButton_Click"
                    />
        </StackPanel>

        <Button Content="Download" Grid.Row="4" Height="40" Margin="0,0,0,10" 
                Background="#FF643AFF" Foreground="White" BorderThickness="0" FontWeight="SemiBold"
                Cursor="Hand" Click="DownloadButton_Click"
                />

        <TextBox x:Name="OutputBox" Grid.Row="5" Height="160" Padding="10"
                 Background="#FF1E1E1E" Foreground="#FFCCCCCC" BorderBrush="#FF333333" BorderThickness="1"
                 VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" Margin="0,20,0,0"/>
    </Grid>
</Window>
